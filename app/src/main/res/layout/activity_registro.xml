<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jorge.guidin.Registro">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/textViewName"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:id="@+id/textViewLastName"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textViewName"
        android:layout_alignLeft="@+id/textViewName"
        android:layout_alignStart="@+id/textViewName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/textViewUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:layout_below="@+id/textViewLastName"
        android:layout_alignLeft="@+id/textViewLastName"
        android:layout_alignStart="@+id/textViewLastName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContraseÃ±a"
        android:id="@+id/textViewPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:layout_below="@+id/textViewUser"
        android:layout_alignLeft="@+id/textViewLastName"
        android:layout_alignStart="@+id/textViewLastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerName"
        android:width="130dp"
        android:inputType="text"
        android:layout_above="@+id/textViewLastName"
        android:layout_alignLeft="@+id/buttonCancel"
        android:layout_alignStart="@+id/buttonCancel"

         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerSurname"
        android:layout_alignBottom="@+id/textViewLastName"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_alignRight="@+id/registerName"
        android:layout_alignEnd="@+id/registerName"
        android:layout_alignLeft="@+id/registerName"
        android:layout_alignStart="@+id/registerName"
        android:width="130dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/registerUser"
        android:layout_alignBottom="@+id/textViewUser"
        android:layout_alignLeft="@+id/registerName"
        android:width="130dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registerPassword"
        android:layout_alignBottom="@+id/textViewPassword"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/registerUser"
        android:width="130dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/buttonAccept"
        android:layout_below="@+id/textViewPassword"
        android:layout_alignRight="@+id/textViewPassword"
        android:layout_alignEnd="@+id/textViewPassword"
        android:layout_marginTop="46dp"
        android:layout_alignLeft="@+id/textViewPassword"
        android:layout_alignStart="@+id/textViewPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/buttonCancel"
        android:layout_alignTop="@+id/buttonAccept"
        android:layout_toRightOf="@+id/buttonAccept"
        android:layout_marginLeft="38dp"
        android:width="130dp"
         />

</RelativeLayout>
