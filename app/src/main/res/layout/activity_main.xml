<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <RelativeLayout android:id="@+id/container" android:layout_width="match_parent"
        android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/textViewTittle"
                android:textSize="50sp"
                android:layout_marginTop="47sp"
                android:textColor="#ff687dff"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usuario"
                android:id="@+id/textViewUser"
                android:textSize="25sp"
                android:layout_marginTop="90sp"
                android:layout_below="@+id/textViewTittle"
                android:layout_toLeftOf="@+id/textViewTittle"
                android:layout_toStartOf="@+id/textViewTittle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contraseÃ±a"
                android:id="@+id/textViewPassword"
                android:layout_marginTop="45sp"
                android:textSize="25sp"
                android:layout_below="@+id/textViewUser"
                android:layout_alignLeft="@+id/textViewUser"
                android:layout_alignStart="@+id/textViewUser"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/editTextUser"
                android:width="150sp"
                android:layout_alignTop="@+id/textViewUser"
                android:layout_toRightOf="@+id/textViewPassword"
                android:layout_toEndOf="@+id/textViewPassword"
                android:layout_marginLeft="24sp"
                android:layout_marginStart="24sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextPassword"
                android:layout_alignLeft="@+id/editTextUser"
                android:layout_alignStart="@+id/editTextUser"
                android:layout_alignRight="@+id/editTextUser"
                android:layout_alignEnd="@+id/editTextUser"
                android:layout_alignBottom="@+id/textViewPassword"
                android:layout_alignTop="@+id/textViewPassword" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recordar_credenciales"
                android:id="@+id/checkBoxcredentials"
                android:layout_below="@+id/textViewPassword"
                android:layout_alignLeft="@+id/textViewPassword"
                android:layout_alignStart="@+id/textViewPassword"
                android:layout_marginTop="54sp"
                android:checked="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entrar"
                android:id="@+id/buttonLogin"
                android:layout_below="@+id/checkBoxcredentials"
                android:layout_alignLeft="@+id/checkBoxcredentials"
                android:layout_alignStart="@+id/checkBoxcredentials"
                android:layout_marginTop="29sp"
                android:layout_alignRight="@+id/textViewPassword"
                android:layout_alignEnd="@+id/textViewPassword" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resgistrarse"
                android:id="@+id/buttonRegister"
                android:layout_alignBottom="@+id/buttonLogin"
                android:layout_alignRight="@+id/editTextPassword"
                android:layout_alignEnd="@+id/editTextPassword" />


    </RelativeLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in sp and extends the full height of
         the container. -->
    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width" android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.example.jorge.guidin.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>
